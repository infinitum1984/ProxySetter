<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/main_background"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_w"
        android:textSize="@dimen/proxy_info_text_size"
        android:text="@string/choose_proxy_type"
        />
    <CheckBox
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_w"
        android:textSize="@dimen/proxy_info_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/http_check"
        android:text="HTTP"
        />
    <CheckBox
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_w"
        android:textSize="@dimen/proxy_info_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/https_check"
        android:text="HTTPS"
        />
    <CheckBox
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_w"
        android:textSize="@dimen/proxy_info_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/socks4_check"
        android:text="SOCKS4"
        />
    <CheckBox
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_w"
        android:textSize="@dimen/proxy_info_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/socks5_check"
        android:text="SOCKS5"
        />

</LinearLayout>