<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_height="wrap_content"
    android:background="@drawable/item_my_proxy_background"
    android:clickable="true"
    tools:context=".Activitys.ProxyConfigActivity"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"


        >




       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/ip_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_w"/>
        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/country_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color_w"
            />
            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="3dp"
                android:id="@+id/delay_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color_w"
                />
            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="3dp"
                android:id="@+id/type_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color_w"
                />
            <TextView
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginTop="3dp"
                android:id="@+id/anon_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color_w"
                />
        </GridLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            >
           <ImageButton

               android:layout_width="40dp"
               android:layout_height="40dp"
               android:textSize="10sp"
               android:id="@+id/copy_ip"
               android:src="@mipmap/ic_copy_content"
               android:background="@drawable/button_back_background"
               />
            <ImageButton
            android:layout_marginTop="10dp"
                android:id="@+id/set_this"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:src="@mipmap/ic_set_small"
                android:background="@drawable/button_arrow_background"
                />

        </LinearLayout>
       </RelativeLayout>


    </LinearLayout>

    <View

        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        >

    </View>


</RelativeLayout>